<!DOCTYPE html>
<html>
<head>
  <title>OSSEC Advanced Management</title>
  <%= stylesheet_link_tag 'login/ossec_login' %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="login-form">
	<%= image_tag "ossec.jpg" %>
	<div id="error"><%= flash[:error] %></div>
	<%=	form_tag(login_path) do %>
		<%= label_tag 'login', 'Login' %>
		<%= text_field_tag 'login' %>
		<%= label_tag 'password', 'Password' %>
		<%= password_field_tag 'password' %>
		<%= submit_tag 'Login' %>
	<% end %>
</div>

</body>
</html>
